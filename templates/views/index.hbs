<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/main.css">
  <link rel="stylesheet" media="screen and (max-width:768px)" href="./css/mobile.css">
  <script src="https://kit.fontawesome.com/95f2ce0fc1.js" crossorigin="anonymous"></script>
  <title>Weather App</title>
</head>

<body id="home">
  {{>header}}

  <main>
    <section id="weather">
      <div class="weather-container">
        <div class="location">
          <h1 id="displayLocation">Surrey, British Columbia</h1>
          <h3 id="displayDate">
          </h3>
        </div>
        <div class="temperature">
          <i class="fas fa-thermometer-half fa-3x"></i>
          <h1 class="" id="displayTemperature">-ËšC</h1>
        </div>
        {{!-- <div class="location">
          <h1 id="displayLocation">Surrey, British Columbia</h1>
          <h3 id="displayDate">
          </h3>
        </div> --}}
        <div class="icon">
          <img src="./img/favicon.png" alt="" id="displayIcon">
        </div>
        <div class="info">
          <form>
            <div class="form-group">
              <label for="city"></label>
              <input type="text" name="city" id="city" placeholder="Enter city name">
            </div>
            <div class="form-group">
              <label for="country"></label>
              <input type="text" name="country" id="country" placeholder="Enter country name">
            </div>
            <input type="submit" id="searchBtn">
          </form>
        </div>
      </div>
    </section>
  </main>

  {{>footer}}
  <script src="./js/app.js"></script>
</body>

</html>